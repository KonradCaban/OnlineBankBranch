    <link href="css/style.css" type="text/css" rel="stylesheet" media="screen,projection" />

</head>
<body>
    <script>
    var msg = @((TempData["message"] != null).ToString().ToLower());
    if (msg == true) {
       swal('@TempData["title"]', '@TempData["message"]', '@TempData["type"]');
        }
       
        var a = @Html.Raw(Json.Encode(TempData["powiadomienia"]));
        for (index = 0; index < a.length; index++) {
            swal({ title: 'Błąd podczas zaplanowanego przelewu', text: a[index], type: 'warning' });
        }
    </script>




    @if (Session["Klient"] != null)
    {
        <nav class="light-blue accent-1" role="navigation">
            <div class="nav-wrapper container">
                @Html.ActionLink("Bank Świnka", "Glowna", "Home", null, new { @style = "color:black;", id = "logo-container", @class = "brand-logo" })

                <ul id="dropdown1" class="dropdown-content ">
                    <li>@Html.ActionLink("Twoje Rachunki", "TwojeRachunki", "Home", null, new { @style = "color:black;" })</li>
                    <li>@Html.ActionLink("Oferta", "Oferta", "Create", null, new { @style = "color:black;" })</li>
                    <li>@Html.ActionLink("Przelew Jednorazowy", "PrzelewJednorazowy", "Create", null, new { @style = "color:black;" })</li>
