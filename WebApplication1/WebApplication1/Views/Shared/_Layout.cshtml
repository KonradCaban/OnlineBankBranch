                    <li>@Html.ActionLink("Twoje przelewy cykliczne", "TwojePrzelewyCykliczne", "Delete", null, new { @style = "color:black;" })</li>

                </ul>

                <ul id="mobile-dropdown2" class="dropdown-content">
                    <li>@Html.ActionLink("Twoje Lokaty", "TwojeLokaty", "Home", null, new { @style = "color:black;" })</li>
                    <li>@Html.ActionLink("Oferta Lokatowa", "OfertaLokat", "Create", null, new { @style = "color:black;" })</li>
                </ul>


                <ul id="mobile-dropdown3" class="dropdown-content ">
                    <li>@Html.ActionLink("Twoje Kredyty", "PanelKredytow", "Home", null, new { @style = "color:black;" })</li>
