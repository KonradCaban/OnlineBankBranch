                    <li>@Html.ActionLink("Twoje Dane", "DaneKlienta", "Edit", null, new { @style = "color:black;" })</li>
                </ul>




                <ul id="nav-mobile" class="sidenav">
                    <li><a href="index.html">Strona główna</a></li>
                    <li><a class="dropdown-trigger " href="#!" data-target="mobile-dropdown1" style="color:black;">Rachunki<i class="material-icons right">arrow_drop_down</i></a></li>
                    <li><a class="dropdown-trigger" href="#!" data-target="mobile-dropdown2" style="color:black;">Lokaty<i class="material-icons right">arrow_drop_down</i></a></li>
                    <li><a class="dropdown-trigger" href="#!" data-target="mobile-dropdown3" style="color:black;">Kredyty<i class="material-icons right">arrow_drop_down</i></a></li>
                    <li><a class="dropdown-trigger" href="#!" data-target="mobile-dropdown4" style="color:black;">Ustawienia<i class="material-icons right">arrow_drop_down</i></a></li>
                    <li>@Html.ActionLink("Wyloguj", "Wyloguj", "Home", null, new { @style = "color:black;" })</li>
                </ul>
                <a href="#" data-target="nav-mobile" class="sidenav-trigger" style="color:black;"><i class="material-icons" style="color:black;">menu</i></a>
            </div>
        </nav>

    }
    else
    {

        <div id="loader-wrapper">
            <div id="loader"></div>
            <div class="loader-section section-left"></div>
            <div class="loader-section section-right"></div>
        </div>
        <!-- End Page Loading -->
        <!-- //////////////////////////////////////////////////////////////////////////// -->
        <!-- START HEADER -->
        <header id="header" class="page-topbar">
            <!-- start header nav-->
            <nav class="light-blue accent-1" role="navigation">
                <div class="nav-wrapper container">
                    <a id="logo-container" href="Glowna" class="brand-logo" style="color:black;"> Bank Świnka</a>

                    <ul class="right hide-on-med-and-down">
                        <li>@Html.ActionLink("Informacje o usługach", "Oferta", "Create", null, new { @style = "color:black;" })</li>
