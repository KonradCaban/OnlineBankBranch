                </ul>

                <ul id="dropdown4" class="dropdown-content">
                    <li>@Html.ActionLink("Bezpieczeństwo", "Kody", "Edit", null, new { @style = "color:black;" })</li>
                    <li>@Html.ActionLink("Twoje Dane", "DaneKlienta", "Edit", null, new { @style = "color:black;" })</li>
                </ul>

                <ul class="right hide-on-med-and-down ">
                    <li>@Html.ActionLink("Panel Klienta", "PanelKlienta", "Home", null, new { @style = "color:black;" })</li>
                    <li><a class="dropdown-trigger " href="#!" data-target="dropdown1" style="color:black;">Rachunki<i class="material-icons right">arrow_drop_down</i></a></li>
                    <li><a class="dropdown-trigger" href="#!" data-target="dropdown2" style="color:black;">Lokaty<i class="material-icons right">arrow_drop_down</i></a></li>
                    <li><a class="dropdown-trigger" href="#!" data-target="dropdown3" style="color:black;">Kredyty<i class="material-icons right">arrow_drop_down</i></a></li>
                    <li><a class="dropdown-trigger" href="#!" data-target="dropdown4" style="color:black;">Ustawienia<i class="material-icons right">arrow_drop_down</i></a></li>
                    <li>@Html.ActionLink("Wyloguj", "Wyloguj", "Home", null, new { @style = "color:black;" })</li>
                </ul>






                <ul id="mobile-dropdown1" class="dropdown-content">
                    <li>@Html.ActionLink("Twoje Rachunki", "TwojeRachunki", "Home", null, new { @style = "color:black;" })</li>
                    <li>@Html.ActionLink("Oferta", "Oferta", "Create", null, new { @style = "color:black;" })</li>
