@using WebApplication1.Models
@{ Kod code = (Kod)TempData["kod"];}
@using (Html.BeginForm("UsunKontoConf", "Delete", FormMethod.Post, new { @class = "formValidate0" }))
{ 
    <div class="container">
        <center>
            <div class="z-depth-3 y-depth-3 x-depth-3 grey  lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px; margin-top: 100px; solid: #EEE;">
                <div class="card-title">
                    <div class="row">
                        <h4 class="card-title">Likwidacja konta</h4>
                    </div>
                </div>
                <div class="row">

                    <input type="hidden" name="id_konta" value="@TempData["id_k"]" />
                    <input type="hidden" name="check_code" value="@code.kod" />

                    <div class="input-field col s12">
                        <label for="password">Podaj hasło</label>
                        <input type="password" id="password" class="validate" name="password" maxlength="50" minlength="6" required />
                    </div>
                    <div class="input-field col s12">
                        <label for="code">Podaj kod autoryzacyjny numer @code.numer_kodu</label>
                        <input type="text" class="validate" name="code" id="code" maxlength="6" minlength="6" required />
                    </div>
                    <div class="input-field col s12">
                        <input type="submit" value="Zlikwiduj konto" class="mt-2 waves-effect waves-light gradient-45deg-deep-purple-blue btn btn-block modal-trigger z-depth-4 " />
                        
                    </div>
                </div>
                </div>
            </center>
        </div>
}
