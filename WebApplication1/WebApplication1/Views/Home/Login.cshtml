@model WebApplication1.Klienci

@{
    ViewBag.Title = "Login";
}
@if (Session["Klient"] != null)
{
    Response.Redirect("PanelKlienta");
}



    <!-- END HEADER -->
    <!-- //////////////////////////////////////////////////////////////////////////// -->
    <!-- START MAIN -->
    <div class="container">
        <center>
            <div class="z-depth-3 y-depth-3 x-depth-3 grey  lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px; margin-top: 100px; solid #EEE; width:60%;">



                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {


                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    if (@ViewBag.Message != null)
                    {
                        <div style="border: 1px solid red">
                            @ViewBag.Message
                        </div>
                    }
                    if (Session["UserID"] == null)
                    {
                        <div class="card-content">
                            <h4 class="card-title">Logowanie</h4>

                            <div class="row">
                                <div class="input-field col s12">
                                    @Html.LabelFor(a => a.login, "Login")
                                    @Html.TextBoxFor(a => a.login)
                                    @Html.ValidationMessageFor(a => a.login)

                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    @Html.LabelFor(a => a.haslo, "Hasło")
                                    @Html.PasswordFor(a => a.haslo, new { required = "required" })
                                    @Html.ValidationMessageFor(a => a.haslo)


                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="input-field col s12 white-text">

                                <button class="waves-effect waves-light gradient-45d    eg-deep-purple-blue btn btn-block z-depth-4" type="submit" style="color:white;">Login</button>

                            </div>
                        </div>
                        @Html.ActionLink("Zapomniałem hasła", "Reset", "Register", null, new { @style = "color:blue;" })
                    }

                }


            </div>
        </center>
    </div>

